<Page
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PapoDeChef.MVVM.Views"
      xmlns:templates="clr-namespace:PapoDeChef.MVVM.Views.Templates" 
      x:Class="PapoDeChef.MVVM.Views.ExploreView"
      mc:Ignorable="d" 
      d:DesignHeight="720" d:DesignWidth="1280"
      MinHeight="720" MinWidth="1280"
      Background="White"
      Title="ExploreView">

    <Page.Resources>
        <DataTemplate x:Key="NormalPostTemplate">
            <ListBox ItemsSource="{Binding Post}">
                <Button Foreground="{x:Null}" Command="{Binding DataContext.SeePostCommand, RelativeSource={RelativeSource AncestorType={x:Type local:ExploreView}, Mode=FindAncestor}}" CommandParameter="{Binding Post}">
                    <StackPanel Orientation="Vertical" VerticalAlignment="Stretch" HorizontalAlignment="Stretch">
                        <Button Foreground="{x:Null}" Command="{Binding DataContext.SeeAccountCommand, RelativeSource={RelativeSource AncestorType={x:Type local:ExploreView}, Mode=FindAncestor}}" CommandParameter="{Binding Account.ID}">
                            <StackPanel Orientation="Horizontal">
                                <Image Source="{Binding Account.PicURI}" Width="50" Height="50"/>
                                <Label Content="{Binding Account.Tag}"/>
                            </StackPanel>
                        </Button>
                        <Image Source="{Binding PostImgURI}" HorizontalAlignment="Stretch" VerticalAlignment="Top" Stretch="Uniform" Width="250" Height="250"/>
                        <Label Content="{Binding Title}" HorizontalAlignment="Stretch" VerticalAlignment="Bottom" />
                        <TextBlock Text="{Binding Description}" HorizontalAlignment="Stretch" VerticalAlignment="Bottom"/>
                        <StackPanel Orientation="Horizontal">
                            <Button Content="Like" Command="{Binding DataContext.LikePostCommand, RelativeSource={RelativeSource AncestorType={x:Type local:ExploreView}, Mode=FindAncestor}}" CommandParameter="{Binding ID}"/>
                            <Label Content="{Binding LikeCount}"/>
                        </StackPanel>
                    </StackPanel>
                </Button>
            </ListBox>
        </DataTemplate>

        <DataTemplate x:Key="RecipePostTemplate">
            <ListBox ItemsSource="{Binding Post}" VerticalContentAlignment="Top" VerticalAlignment="Top" Padding="0" Margin="0">
                <Button Foreground="{x:Null}" Command="{Binding DataContext.SeePostCommand, RelativeSource={RelativeSource AncestorType={x:Type local:ExploreView}, Mode=FindAncestor}}" CommandParameter="{Binding Post}">
                    <StackPanel Orientation="Vertical" VerticalAlignment="Stretch" HorizontalAlignment="Stretch">
                        <Button Foreground="{x:Null}" Command="{Binding DataContext.SeeAccountCommand, RelativeSource={RelativeSource AncestorType={x:Type local:ExploreView}, Mode=FindAncestor}}" CommandParameter="{Binding Account.ID}">
                            <StackPanel Orientation="Horizontal">
                                <Image Source="{Binding Account.PicURI}" Width="50" Height="50"/>
                                <Label Content="{Binding Account.Tag}"/>
                            </StackPanel>
                        </Button>
                        <Image Source="{Binding PostImgURI}" HorizontalAlignment="Stretch" VerticalAlignment="Top" Stretch="Uniform" Width="250" Height="250"/>
                        <Label Content="{Binding Title}" HorizontalAlignment="Stretch" VerticalAlignment="Bottom" />
                        <TextBlock Text="{Binding Description}" HorizontalAlignment="Stretch" VerticalAlignment="Bottom"/>
                        <StackPanel Orientation="Horizontal">
                            <Button Content="Like" Command="{Binding DataContext.LikePostCommand, RelativeSource={RelativeSource AncestorType={x:Type local:ExploreView}, Mode=FindAncestor}}" CommandParameter="{Binding ID}"/>
                            <Label Content="{Binding LikeCount}"/>
                            <Label Content="{Binding Ratings}" Margin="10,0,0,0"/>
                            <Label Content="{Binding AverageRating}" Margin="10,0,0,0"/>
                        </StackPanel>
                    </StackPanel>
                </Button>
            </ListBox>
        </DataTemplate>

        <templates:PostTemplateSelector x:Key="PostTemplateSelector"
                                        NormalPostTemplate="{StaticResource NormalPostTemplate}"
                                        RecipePostTemplate="{StaticResource RecipePostTemplate}"/>

    </Page.Resources>

    <Grid>


        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>

        <templates:NavBar Grid.Column="0" VerticalAlignment="Stretch" HorizontalAlignment="Left" Margin="10"/>

        <templates:SearchBar Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="10"/>

        <templates:FollowerBlock Grid.Column="2" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="10"/>

        <ListView 
            Grid.RowSpan="1" 
            Grid.Column="1" 
            ItemsSource="{Binding ExplorePosts}" 
            ItemTemplateSelector="{StaticResource PostTemplateSelector}"
            Margin="10,60,10,10" 
            ScrollViewer.HorizontalScrollBarVisibility="Disabled" 
            ScrollViewer.VerticalScrollBarVisibility="Auto"
            VerticalContentAlignment="Top">
            <ListView.ItemsPanel>
                <ItemsPanelTemplate>
                    <UniformGrid Columns="3"/>
                </ItemsPanelTemplate>
            </ListView.ItemsPanel>
        </ListView>

    </Grid>
</Page>
